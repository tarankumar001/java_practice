import java.util.ArrayList;
import java.util.List;

class Solution {
    public List<Integer> getRow(int n) {
        List<Integer> row = new ArrayList<>();
        row.add(1); // first element is always 1

        if (n == 1) return row;

        long prev = 1; // first element

        for (int i = 1; i < n; i++) {
            long curr = prev * (n - i) / i;
            row.add((int) curr);
            prev = curr;
        }

        return row;
    }
}
