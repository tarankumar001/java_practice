// User function Template for Java
class Solution {
    public static String reverseString(String s) {
        int n = s.length();
        StringBuilder result = new StringBuilder();

        // loop from last character to first
        for (int i = n - 1; i >= 0; i--) {
            char ch = s.charAt(i);
            result.append(ch);
        }

        return result.toString();
    }
}
