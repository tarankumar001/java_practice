class Solution {
    static int commonSubseq(String S1, String S2) {
        // Loop over every character in S1
        for (int i = 0; i < S1.length(); i++) {
            // Loop over every character in S2
            for (int j = 0; j < S2.length(); j++) {
                if (S1.charAt(i) == S2.charAt(j)) {
                    return 1; // Found a common character → common subsequence exists
                }
            }
        }
        return 0; // No common character → no common subsequence
    }
}